<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/gamepad"
    tools:context=".ControlTest">

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/jst"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/circle"
        app:JV_buttonColor="#8BF8F2F2"
        app:JV_buttonSizeRatio="80%">

    </io.github.controlwear.virtual.joystick.android.JoystickView>

    <TextView
        android:id="@+id/FPSTv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="Ping:500"
        android:textColor="#18DD20"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:text="CONNECT"
        android:textColor="@color/white"
        android:textSize="18dp">

    </TextView>

    <TextView
        android:id="@+id/ConnectTv"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/circle1"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/DownTv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/circle2"
        android:text="D"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/UpTv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/circle2"
        android:text="U"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="30dp">

    </TextView>


    <TextView
        android:id="@+id/LeftTv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/circle2"
        android:text="L"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/RightTv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/circle2"
        android:text="R"
        android:textAlignment="center"
        android:textColor="#00BCD4"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/M1"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="1"
        android:layout_marginBottom="50dp"
        android:background="#7CE6F3E6"
        android:textSize="14dp">

    </TextView>
    <TextView
        android:id="@+id/M2"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/M1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="5dp"
        android:text="2"

        android:background="#7CE6F3E6"
        android:textSize="14dp">

    </TextView>
    <TextView
        android:id="@+id/M3"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@+id/M1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="5dp"
        android:text="|>"

        android:background="#7CE6F3E6"
        android:textSize="14dp">

    </TextView>
</RelativeLayout>